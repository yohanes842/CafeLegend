<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_login_btn_pressed"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" android:state_hovered="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_login_btn" />
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>